<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/assinaturaTextView"
        android:layout_width="260dp"
        android:layout_height="0dp"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="17dp"
        android:text="Assinatura:"
        app:layout_constraintBottom_toTopOf="@+id/chamadaLocalTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Checkpoint" />

    <TextView
        android:id="@+id/chamadaLocalTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"

        android:text="chamada Local:"
        app:layout_constraintBottom_toTopOf="@+id/chamadaCelularTextView"
        app:layout_constraintEnd_toEndOf="@+id/assinaturaTextView"
        app:layout_constraintStart_toStartOf="@+id/assinaturaTextView"
        app:layout_constraintTop_toBottomOf="@+id/assinaturaTextView" />


    <TextView
        android:id="@+id/chamadaCelularTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="25dp"
        android:text="Chamada ao celular:"
        app:layout_constraintBottom_toTopOf="@+id/totalTextView"
        app:layout_constraintEnd_toEndOf="@+id/chamadaLocalTextView"
        app:layout_constraintStart_toStartOf="@+id/totalTextView"
        app:layout_constraintTop_toBottomOf="@+id/chamadaLocalTextView" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="259dp"
        android:layout_height="0dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="353dp"
        android:text="Total: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chamadaCelularTextView" />

    <TextView
        android:id="@+id/Checkpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="153dp"
        android:text="Checkpoint"
        app:layout_constraintBottom_toTopOf="@+id/assinaturaTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>